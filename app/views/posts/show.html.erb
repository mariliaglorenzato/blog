<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
 
<p>
  <strong>Text:</strong>
  <%= @post.body %>
</p>

<ul>
  <li><%= link_to "Edit", edit_post_path(@post)%></li>
  <li><%= link_to "Destroy", post_path(@post), data: { turbo_method: :delete, turbo_confirm: "Are you sure?" }%>
  </li>
</ul>

<h2>Comments</h2>
<%= render @post.comments %>

<h2> Add a comment: </h2>
<%= render "comments/form" %>

<%= link_to 'Back', posts_path %>